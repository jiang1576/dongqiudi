<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/login11"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toppic"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="用户："
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="状态："
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_condition"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp">


        <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="84dp"
            android:layout_height="60dp"
            >

            <ImageView
                android:id="@+id/first_image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt1"/>

            <TextView
                android:id="@+id/first_text"
                android:layout_width="84dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="25dp"
                android:text="首页" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_width="84dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/second_image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt2"/>

            <TextView
                android:id="@+id/second_text"
                android:layout_width="84dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="25dp"
                android:text="约球" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="74dp"
            android:layout_height="60dp"
            android:background="@drawable/rmf">


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/third_layout"
            android:layout_width="84dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/third_image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt3"/>

            <TextView
                android:id="@+id/third_text"
                android:layout_width="84dp"
                android:layout_height="20dp"

                android:layout_marginTop="40dp"
                android:paddingLeft="25dp"
                android:text="场地" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fourth_layout"
            android:layout_width="84dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/fourth_image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt4" />

            <TextView
                android:id="@+id/fourth_text"
                android:layout_width="84dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="25dp"
                android:text="社区" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>